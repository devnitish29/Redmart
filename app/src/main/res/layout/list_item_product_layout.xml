<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation_medium"
    app:cardMaxElevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/card_content_padding">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/min_padding"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="@dimen/picture_width"
                android:layout_height="@dimen/picture_height"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtProductSaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_min_padding"
                android:background="@color/redmart_red"
                android:padding="@dimen/min_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/font_superest_tiny"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="5"
                android:minLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/font_tiny"
                android:textStyle="bold"
                android:transitionName="@string/trans_name" />

            <TextView
                android:id="@+id/productQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_padding"
                android:gravity="bottom"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_super_tiny" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/min_padding"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_super_tiny"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productDiscountedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/min_padding"
                    android:layout_marginTop="@dimen/min_padding"
                    android:gravity="bottom"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/font_superest_tiny" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>